{
  "manifest_version": 3,
  "name": "AI Web Pilot",
  "version": "1.0.0",
  "description": "AI-driven web automation through MCP protocol",
  "permissions": [
    "tabs",
    "scripting",
    "downloads",
    "cookies",
    "storage",
    "declarativeNetRequest",
    "debugger",
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "AI Web Pilot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}