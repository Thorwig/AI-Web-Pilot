{
  "name": "ai-web-pilot",
  "version": "1.0.0",
  "description": "Chrome extension and MCP server for AI-driven web automation",
  "main": "dist/host/index.js",
  "type": "module",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "npm run build:host && npm run build:extension",
    "build:host": "vite build --config vite.host.config.ts",
    "build:extension": "vite build --config vite.extension.config.ts",
    "dev:host": "vite build --config vite.host.config.ts --watch",
    "dev:extension": "vite build --config vite.extension.config.ts --watch",
    "start:host": "node dist/host/index.js",
    "start": "npm run build:host && npm run start:host",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "mcp",
    "web-automation",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  }
}